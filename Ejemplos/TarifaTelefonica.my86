Program Nom.TarifaTelefonica	
	Vars
		Entero Minutos;
		Entero Tarifa:=5;
		Decimal Costo;
	Begin
	Imprime('¿Cuántos minutos duró la llamada?:\n');
	Lee(Minutos);
	
	Si(Minutos<=3)
	begin
		Imprime('Son $10.00 pesitos');
	end
	Sino
	begin
		Minutos:=Minutos-3;
		Costo:=Minutos*Tarifa+10;
		Imprime('Son ');
		Imprime(Costo);
		Imprime(' pesitos');
	end
End;