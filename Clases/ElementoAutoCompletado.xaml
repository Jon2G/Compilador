<UserControl x:Class="My8086.Clases.ElementoAutoCompletado"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:My8086.Clases"
             xmlns:images="clr-namespace:My8086.Images"
             mc:Ignorable="d" 
             MinHeight="25"
             Height="25" MinWidth="75" Padding="0" Margin="0"  HorizontalAlignment="Stretch" 
             HorizontalContentAlignment="Stretch">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--<Border BorderBrush="Black" BorderThickness="1">-->
            <Image Margin="5,0" x:Name="Imagen" Source="../Images/Copy.png"/>
        <!--</Border>-->
        <TextBlock Foreground="Black" x:Name="TxtName" Grid.Column="1" FontSize="16"/>
    </Grid>
</UserControl>
